# ===========================================
# TFM MBIT - Variables de Entorno
# ===========================================
# Copia este archivo como .env y configura tus valores

# ===========================================
# APIs EXTERNAS - REQUERIDAS
# ===========================================

# OpenAI API Key (REQUERIDO)
# Obtener en: https://platform.openai.com/api-keys
OPEN_AI_API=sk-your-openai-api-key-here

# HuggingFace Token (OPCIONAL)
# Obtener en: https://huggingface.co/settings/tokens
HUGGINGFACE_TOKEN=hf_your-huggingface-token-here

# ===========================================
# OLLAMA - MODELO LOCAL
# ===========================================

# Host de Ollama (OPCIONAL)
# Por defecto: http://localhost:11434
OLLAMA_HOST=http://localhost:11434

# Modelo de Ollama (OPCIONAL)
# Por defecto: gemma3:4b
OLLAMA_MODEL=gemma3:4b

# Timeout para Ollama (OPCIONAL)
# Por defecto: 180 segundos
OLLAMA_TIMEOUT=180

# Temperatura para Ollama (OPCIONAL)
# Por defecto: 0.3
OLLAMA_TEMPERATURE=0.3
 
# ========================
# LANGSMITH CONFIG
# ========================
LANGCHAIN_TRACING_V2    ="true"
LANGCHAIN_PROJECT       ="AgentCluedo"  # O el nombre que le diste a tu proyecto
LANGCHAIN_API_KEY       ="lsv2_ptiuiuhihuihuihuhuhuhuihuiuhihuihuihuiuhhu2_f11dbd7af3"

# ===========================================
# CONFIGURACIÓN DEL SERVIDOR
# ===========================================

# Host del servidor API (OPCIONAL)
# Por defecto: localhost
API_HOST=localhost

# Puerto del servidor API (OPCIONAL)
# Por defecto: 8000
API_PORT=8000

# ===========================================
# TELEGRAM BOT (OPCIONAL)
# ===========================================

# Token del bot de Telegram (OPCIONAL)
# Obtener en: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here

# ===========================================
# BASE DE DATOS (OPCIONAL)
# ===========================================

# URL de la base de datos (OPCIONAL)
# Por defecto: sqlite:///./artifacts/database.db
DATABASE_URL=sqlite:///./artifacts/database.db

# ===========================================
# CONFIGURACIÓN DE DESARROLLO
# ===========================================

# Nivel de logging (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Modo de desarrollo (true/false)
DEBUG_MODE=false

# ===========================================
# CONFIGURACIÓN DE PROCESAMIENTO
# ===========================================

# Máximo de workers para procesamiento paralelo
MAX_WORKERS=4

# Timeout para operaciones de IA (segundos)
AI_TIMEOUT=180

# ===========================================
# CONFIGURACIÓN DE ALMACENAMIENTO
# ===========================================

# Directorio de artefactos (OPCIONAL)
# Por defecto: ./artifacts
ARTIFACTS_DIR=./artifacts

# Directorio de datos (OPCIONAL)
# Por defecto: ./data
DATA_DIR=./data

# ===========================================
# NOTAS DE CONFIGURACIÓN
# ===========================================

# 1. Variables REQUERIDAS:
#    - OPEN_AI_API (obligatorio para funcionalidad completa)

# 2. Variables OPCIONALES:
#    - HUGGINGFACE_TOKEN (para diarización avanzada)
#    - TELEGRAM_BOT_TOKEN (para notificaciones)
#    - OLLAMA_* (para modelos locales)
#    - LANGCHAIN_* (para próximas implementaciones)

# 3. Variables con valores por defecto:
#    - API_HOST, API_PORT, DATABASE_URL, etc.

# 4. Para desarrollo local:
#    - DEBUG_MODE=true
#    - LOG_LEVEL=DEBUG

# 5. Para producción:
#    - DEBUG_MODE=false
#    - LOG_LEVEL=INFO
